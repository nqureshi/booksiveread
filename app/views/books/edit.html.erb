<h3>Edit book</h3>

<%= form_for(@book) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>
  <div class="textarea">
    <%= f.label :review %>
    <%= f.text_area :review, :rows => 10, :class => "span8" %>
  </div>
  <div class="actions">
    <%= f.submit "Update", :class => "btn btn-primary" %>
  </div>
<% end %>